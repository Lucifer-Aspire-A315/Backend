{
  "info": {
    "name": "RN FinTech - Auth",
    "_postman_id": "rnfintech-auth-collection",
    "description": "Basic auth flows for RN FinTech",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup - Customer",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Integration Customer\",\n  \"email\": \"{{customerEmail}}\",\n  \"phone\": \"9123456789\",\n  \"password\": \"{{customerPassword}}\",\n  \"role\": \"CUSTOMER\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/signup",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "signup"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{customerEmail}}\",\n  \"password\": \"{{customerPassword}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const data = pm.response.json();",
              "if (data && data.data && data.data.token) { pm.environment.set('jwt', data.data.token); }",
              "pm.test('login ok', () => pm.expect(pm.response.code).to.be.oneOf([200,201]));"
            ]
          }
        }
      ]
    },
    {
      "name": "Profile - Me",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
        "url": {
          "raw": "{{baseUrl}}/profile/me",
          "host": ["{{baseUrl}}"],
          "path": ["profile", "me"]
        }
      }
    },
    {
      "name": "Request Password Reset",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{customerEmail}}\"\n}" },
        "url": {
          "raw": "{{baseUrl}}/auth/request-password-reset",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "request-password-reset"]
        }
      }
    }
  ]
}
